<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado.ejs') %>
	<% } else{ %>
	<%- include('./partials/header.ejs') %>
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.fotoDePerfil %> " alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.nombre %>
					</h1>
					<% if (locals.user && user.id == usuario.id) { %>
						<a href="/profile/edit/<%= usuario.id %> ">
							<i class="fas fa-cog"></i>
						</a>
					<% } %> 
						
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="ul-profile">
						<li><%= usuario.joyas.length %> productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<% if (usuario.joyas.length == 0) {%>
				<h2 class="products-title">No se han encontrado resultados para tu busqueda.</h2>
				<% }else { %>
				<% for( let i = 0; i < usuario.joyas.length; i++ ) { %>
				<% const joya = usuario.joyas[i] %> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/0">
						<figure class="product-box_image">
							<img src="images/products/default-image.png" alt="Producto Subido">
						</figure>
						<article class="product-box_data">
							<h2><%= joya.producto %> </h2>
							<p><%= joya.material %> </p>
							<p><%= joya.piedras %> </p>
							<img src="<%= joya.imagen %> " alt="">
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% }} %> 
	

		
		</div>
	</div> 
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>