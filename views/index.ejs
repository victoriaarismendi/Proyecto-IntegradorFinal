<%- include('./partials/head') %> 


<body>

	<!-- Header -->
	<%- include('./partials/header.ejs') %>
	<!-- /Header -->


	<!-- Banner -->
	<div class="banner">
		<img src="/public/images/products/bannerNuevo.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Colecci√≥n Athenas</h2>
			</div>
			<!-- Bucle de products -->

			<% for( let index = 0; index < joyas.length; index++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product">
						<figure class="product-box_image">
							<img src="<%= joyas[index].imagen %> " alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2 class="titulo-producto"><%= joyas[index].producto%></h2>
							<p class="texto-productos">Hecho de <%= joyas[index].material %> </p>
							<p class="texto-productos">Precio: $<%= joyas[index].precio %> </p>
						</article>
					</a>
				</section>
			</div>

			<% } %>



			<!-- footer -->
			<%- include('./partials/footer.ejs') %>
			<!-- /footer -->

</body>

</html>