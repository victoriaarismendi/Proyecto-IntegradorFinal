<%- include('./partials/head') %>

<body class="bodyProducts">
	<!-- Header -->
	<% if (locals.user) { %>
		<%- include('./partials/headerLogueado.ejs') %>
	<% } else{ %>
	<%- include('./partials/header.ejs') %>
	<% } %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">		

			<h2 class="products-title"><%= joyas.producto %></h2>
			<p class="product-detail-description">
				<a href="/product/id/0-add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= joyas.imagen %> " alt="" class="product-detail-img">
					<p class="product-detail-description">
						Material: <%= joyas.material %>
					</p>
					<p class="product-detail-description">
						Piedras: <%= joyas.piedras %>
					</p>
					<p class="product-detail-description">
						Fecha de carga: <%= joyas.fechaDeCarga %>
					</p>
				</article>
				
			</div>
			<form action="joyas/ <%= joyas.id%>/ delete" method ="POST"></form>
			<input class="btn btn-danger" type = "button" value = "Borrar">
		
		</div>
	</div>
	<!-- /product detail -->
	

	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->

</body>

</html>